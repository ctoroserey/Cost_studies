   journal = {eLife},
   keywords = {cross-frequency coupling,human,memory,neuroscience,synchrony,thalamus},
   note = {This one doesn't include the hippocampus directly, but it talks about the reliance on frontal theta to thalamic (ATN) gamma phase-frequency coupling for successful encoding. Specifically, good encoding produced fronto-ATN theta-gamma cross-frequency coupling (CFC) in the trough of theta, while within-ATN CFC was at the peak of theta.<br/><br/>In the authors words: frontal theta modulates RATN gamma via frontal-ATN theta synchrony during successful encoding.<br/><br/>Note: It is a recognition task, though.},
   pages = {e05352},
   pmid = {25535839},
   title = {Corticothalamic phase synchrony and cross-frequency coupling predict human memory formation},
   volume = {3},
