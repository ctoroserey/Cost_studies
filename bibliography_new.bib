@article{Kahneman1984,
   abstract = {Discusses the cognitive and the psychophysical determinants of choice in risky and riskless contexts. The psychophysics of value induce risk aversion in the domain of gains and risk seeking in the domain of losses. The psychophysics of chance induce overweighting of sure things and of improbable events, relative to events of moderate probability. Decision problems can be described or framed in multiple ways that give rise to different preferences, contrary to the invariance criterion of rational choice. The process of mental accounting, in which people organize the outcomes of transactions, explains some anomalies of consumer behavior. In particular, the acceptability of an option can depend on whether a negative outcome is evaluated as a cost or as an uncompensated loss. The relationships between decision values and experience values and between hedonic experience and objective states are discussed.},
   author = {Daniel Kahneman and Amos Tversky},
   doi = {10.1037/0003-066X.39.4.341},
   isbn = {1935-990X},
   issn = {0003-066X},
   issue = {4},
   journal = {American Psychologist},
   keywords = {Decision Making,gain/loss framing,risk,risk aversion},
   note = {Exposition of instances where rational devices such as invariance are violated during decision making. <br/><br/>Utility is concave in the realm of gains and convex in the realm of losses, and the slope of losses is steeper. Thus humans are risk averse during potential gains and risk averse when faced with losses.<br/><br/>This leads to violations of invariance by means of framing.<br/><br/>Humans also distort probabilities so that moderate ones are undervalued and low chances are boosted. Experiencing bets with very low probabilities accentuates their perceived probability, leading to risk seeking in gains (i.e. lottery)<br/><br/>In terms of daily transactions, people follow a topical mental accounting in which the immediate context is considered, rather than evaluating absolute or comprehensive differences between scenarios leading to goods. The examples show how saving or losing the same amount of money can be perceived differently depending on the framing, and it's governed by the concavity and convexity of gains and losses.<br/><br/>Endowment effect: when considering a new environment, the disadvantages of the transition loom larger than gains, and so through loss aversion the current state of the individual is evaluated higher.<br/><br/>Finally, choices are interpreted differently when they're framed as a loss vs cost. Losses remain aversive, but costs less so because they're a transaction. That's why the same individual can reject a gamble but buy a lottery ticket with matching probability.},
   pages = {341},
   pmid = {664},
   title = {Choices, values, and frames},
   volume = {39},
   year = {1984},
}
