   doi = {10.1152/jn.00529.2019},
   issn = {0022-3077},
   issue = {3},
   journal = {J Neurophysiol},
   pages = {1144-1179},
   publisher = {United States},
   title = {Parallel distributed networks dissociate episodic and social functions within the individual},
   volume = {123},
   year = {2020},
}
