   isbn = {0149-7634},
   issn = {0149-7634},
   issue = {1},
   journal = {Neuroscience and biobehavioral reviews},
   keywords = {Food intake Dopamine,Palatability Affect Reward Nucleus accumbens Amygd},
   note = {NULL},
   pages = {1-25},
   pmid = {8622814},
   title = {Food Reward : Brain Substrates of Wanting and Liking},
   volume = {20},
   year = {1996},
