   keywords = {Cingulate cortex,Decision making,Dopamine,Dorsolateral prefrontal cortex,Incentive learning,Orbital cortex,Ventral striatum},
   pages = {8368-8376},
   pmid = {16899732},
   title = {Reward-related cortical inputs define a large striatal region in primates that interface with associative cortical connections, providing a substrate for incentive-based learning},
   volume = {26},
   year = {2006},
}
