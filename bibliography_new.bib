   keywords = {Brain networks,Community detection algorithms,Empirical mode decomposition,Random walkers,k-modes clustering},
   pages = {117431},
   pmid = {33045336},
   publisher = {Elsevier Inc.},
   title = {Detecting brain network communities: Considering the role of information flow and its different temporal scales},
   volume = {225},
