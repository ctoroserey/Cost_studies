   doi = {10.1523/JNEUROSCI.4496-08.2009},
   isbn = {1529-2401 (Electronic)\n0270-6474 (Linking)},
   issn = {0270-6474},
   issue = {18},
   journal = {Journal of Neuroscience},
   pages = {5749-5757},
   pmid = {19420243},
