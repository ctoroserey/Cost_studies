   year = {2004},
}
@article{Rustichini2017,
   abstract = {During economic decisions, offer value cells in orbitofrontal cortex (OFC) encode the values of offered goods. Furthermore, their tuning functions adapt to the range of values available in any given context. A fundamental and open question is whether range adaptation is behaviorally advantageous. Here we present a theory of optimal coding for economic decisions. We propose that the representation of offer values is optimal if it ensures maximal expected payoff. In this framework, we examine offer value cells in non-human primates. We show that their responses are quasi-linear even when optimal tuning functions are highly non-linear. Most importantly, we demonstrate that for linear tuning functions range adaptation maximizes the expected payoff. Thus value coding in OFC is functionally rigid (linear tuning) but parametrically plastic (range adaptation with optimal gain). Importantly, the benefit of range adaptation outweighs the cost of functional rigidity. While generally suboptimal, linear tuning may facilitate transitive choices.},
   author = {Aldo Rustichini and Katherine E. Conen and Xinying Cai and Camillo Padoa-Schioppa},
   doi = {10.1038/s41467-017-01373-y},
   issn = {20411723},
   issue = {1},
   journal = {Nature Communications},
   note = {Haven't finished it yet, but this seems to say that firing rate range adaptation is quasi-linear as a functon of relative quantities in binay choices (1 quantity of A vs 2 quantities of B). That means that, while the monkey's choices of juice can be fit with a sigmoidal function, the firing rate of neurons coding the offer value is linear, with noise inversely related to the steepness of the sigmoidal function. This range correction (like the one in the fMRI Kable paper) is applied at every choice.<br/><br/>Another way of thinking about it is that: if I prefer 1A over 3Bs, and my indifference point is 1A = 4Bs, while my choices will be sigmoidal with a steep slope around the indifference point, neurons in mPFC would increase their firing rate linearly as the combinations of A and B increase in the latter.<br/><br/>Interestingly, range adaptation and overall firing rate related to one good is independent from the good it's being compared to. These results propose that OFC neurons maximize payoff without maximizing information (like sensory neurons do).},
   pmid = {29084949},
   publisher = {Springer US},
   title = {Optimal coding and neuronal adaptation in economic decisions},
   volume = {8},
   url = {http://dx.doi.org/10.1038/s41467-017-01373-y},
   year = {2017},
}
@article{Palmer2013,
   abstract = {Guiding behavior requires the brain to make predictions about future sensory inputs. Here we show that efficient predictive computation starts at the earliest stages of the visual system. We estimate how much information groups of retinal ganglion cells carry about the future state of their visual inputs, and show that every cell we can observe participates in a group of cells for which this predictive information is close to the physical limit set by the statistical structure of the inputs themselves. Groups of cells in the retina also carry information about the future state of their own activity, and we show that this information can be compressed further and encoded by downstream predictor neurons, which then exhibit interesting feature selectivity. Efficient representation of predictive information is a candidate principle that can be applied at each stage of neural computation.},
