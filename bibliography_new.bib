   keywords = {Adult,Cognition,Cognition: physiology,Decision Making,Decision Making: physiology,Female,Humans,Magnetic Resonance Imaging,Male,Neuropsychological Tests,Prefrontal Cortex,Prefrontal Cortex: physiology,Time Factors},
   month = {4},
   pages = {7922-6},
   pmid = {20385798},
   title = {Prefrontal cortex, cognitive control, and the registration of decision costs.},
