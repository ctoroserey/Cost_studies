}
@article{Kahnt2018,
   abstract = {Information about potential rewards in the environment is essential for guiding adaptive behavior, and understanding neural reward processes may provide insights into neuropsychiatric dysfunctions. Over the past 10 years, multivoxel pattern analysis (MVPA) techniques have been used to study brain areas encoding information about expected and experienced outcomes. These studies have identified reward signals throughout the brain, including the striatum, medial prefrontal cortex, orbitofrontal cortex, dorsolateral prefrontal cortex, and parietal cortex. This review article discusses some of the assumptions and models that are used to interpret results from these studies, and how they relate to findings from animal electrophysiology. The article reviews and summarizes some of the key findings from MVPA studies on reward. In particular, it first focuses on studies that, in addition to mapping out the brain areas that process rewards, have provided novel insights into the coding mechanisms of value and reward. Then, it discusses examples of how multivariate imaging approaches are being used more recently to decode features of expected rewards that go beyond value, such as the identity of an expected outcome or the action required to obtain it. The study of such complex and multifaceted reward representations highlights the key advantage of using representational methods, which are uniquely able to reveal these signals and may narrow the gap between animal and human research. Applied in a clinical context, MVPA may advance our understanding of neuropsychiatric disorders and the development of novel treatment strategies.},
   author = {Thorsten Kahnt},
   doi = {10.1016/j.neuroimage.2017.03.067},
   issn = {10959572},
   issue = {June 2017},
   journal = {NeuroImage},
   keywords = {Decision-making,Decoding,Multivoxel pattern analysis,Orbitofrontal cortex,Reward,fMRI},
   note = {connect to: Levy et al 2011 (decoding choice from passive viewing value); chib et al 2009 (common currency in vmPFC, as SV from one category predicts decodes SV from another's brain activity)<br/><br/>Paper discusses a number of foundational questions regarding fMRI and MVPA methods: 1) what do single neurons code for? Positive and negative relationships to value can be homogenous (VTA/SN) or heterogenous (PFC). 2) how does fMRI capture that activity? bias sampling: hoping that most neurons within a voxel are selective for a common behavior (but more complexity exists); 3) Which voxels constitute an activity pattern? voxel selection can give idiosyncratic (e.g. value) or generalizable (e.g. motor) representations, but decoding across p’s can capture diff patterns. (maybe delete this part)<br/><br/>Findings: what have we learned from train/test decoding over mass glm? Reinforcement signals are ubiquitous; Reward can be distinguished from its sensory associate (see fig); distinguishing between salience and value, and showing overlap in OFC between value (continuous) and valence (categorical); expected reward patterns predict similar patterns during outcome in OFC.<br/><br/><br/>Current topics: common currency? yes in vmPFC; common value code (do value-related areas have a common code for ranking the value of options, regardless of their identity?)? yes in vmPFC. Pairings of value-action-outcome? Yes in OFC, promoting it as an area that makes up a cog map of the environment. <br/><br/>Important advantage of MVPA: &quot;MVPA techniques are uniquely suited to explicitly test whether a given region encodes different variables using similar, or distinct but spatially overlapping, patterns.&quot; Main takeaway: value-related encoding in the brain is more multifaceted than simple value computation.},
   pages = {324-333},
   publisher = {Elsevier Ltd},
   title = {A decade of decoding reward-related fMRI signals and where we go from here},
   volume = {180},
   url = {https://doi.org/10.1016/j.neuroimage.2017.03.067},
   year = {2018},
}
@article{Chib2009,
   abstract = {To make economic choices between goods, the brain needs to compute representations of their values. A great deal of research has been performed to determine the neural correlates of value representations in the human brain. However, it is still unknown whether there exists a region of the brain that commonly encodes decision values for different types of goods, or if, in contrast, the values of different types of goods are represented in distinct brain regions. We addressed this question by scanning subjects with functional magnetic resonance imaging while they made real purchasing decisions among different categories of goods (food, nonfood consumables, and monetary gambles). We found activity in a key brain region previously implicated in encoding goal-values: the ventromedial prefrontal cortex (vmPFC) was correlated with the subjects' value for each category of good. Moreover, we found a single area in vmPFC to be correlated with the subjects' valuations for all categories of goods. Our results provide evidence that the brain encodes a "common currency" that allows for a shared valuation for different categories of goods.},
   author = {Vikram S. Chib and Antonio Rangel and Shinsuke Shimojo and John P. O'Doherty},
   doi = {10.1523/JNEUROSCI.2575-09.2009},
   issn = {02706474},
   issue = {39},
   journal = {Journal of Neuroscience},
   note = {Are diff categories of goods evaluated under a common neural currency?<br/><br/>Subjects prescan willingness to pay for goods (money, food, trinkets) acted as decision values. In scan they chose between an item vs median $ wtp.<br/><br/>Vmpfc was the only common region across item classes whose activity scaled with the decision value (wtp) of items. No class-unique areas.<br/><br/>Results persisted if the reference item was a snack ~ median bid instead of median $.},
   pages = {12315-12320},
   title = {Evidence for a common representation of decision values for dissimilar goods in human ventromedial prefrontal cortex},
   volume = {29},
   year = {2009},
}
@article{Knutson2014,
   abstract = {Neuroimaging findings are often interpreted in terms of affective experience, but researchers disagree about the advisability or even possibility of such inferences, and few frameworks explicitly link these levels of analysis. Here, we suggest that the spatial and temporal resolution of functional magnetic resonance imaging (fMRI) data could support inferences about affective states. Specifically, we propose that fMRI nucleus accumbens (NAcc) activity is associated with positive arousal, whereas a combination of anterior insula activity and NAcc activity is associated with negative arousal. This framework implies quantifiable and testable inferences about affect from fMRI data, which may ultimately inform predictions about approach and avoidance behavior. We consider potential limits on neurally inferred affect before highlighting theoretical and practical benefits. © 2014 Elsevier Ltd.},
   author = {Brian Knutson and Kiefer Katovich and Gaurav Suri},
