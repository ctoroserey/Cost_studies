   issue = {42},
   journal = {The Journal of neuroscience : the official journal of the Society for Neuroscience},
   pages = {14080-14090},
   pmid = {20962229},
   title = {Separate valuation subsystems for delay and effort decision costs.},
   volume = {30},
   url = {http://www.jneurosci.org/cgi/doi/10.1523/JNEUROSCI.2752-10.2010},
   year = {2010},
}
@article{Massar2015,
   abstract = {Making decisions about rewards that involve delay or effort requires the integration of value and cost information. The brain areas recruited in this integration have been well characterized for delay discounting. However only a few studies have investigated how effort costs are integrated into value signals to eventually determine choice. In contrast to previous studies that have evaluated fMRI signals related to physical effort, we used a task that focused on cognitive effort. Participants discounted the value of delayed and effortful rewards. The value of cognitively effortful rewards was represented in the anterior portion of the inferior frontal gyrus and dorsolateral prefrontal cortex. Additionally, the value of the chosen option was encoded in the anterior cingulate cortex, caudate, and cerebellum. While most brain regions showed no significant dissociation between effort discounting and delay discounting, the ACC was significantly more activated in effort compared to delay discounting tasks. Finally, overlapping regions within the right orbitofrontal cortex and lateral temporal and parietal cortices encoded the value of the chosen option during both delay and effort discounting tasks. These results indicate that encoding of rewards discounted by cognitive effort and delay involves partially dissociable brain areas, but a common representation of chosen value is present in the orbitofrontal, temporal and parietal cortices.},
   author = {Stijn A A Massar and Camilo Libedinsky and Chee Weiyan and Scott A. Huettel and Michael W L Chee},
   doi = {10.1016/j.neuroimage.2015.06.080},
   isbn = {1053-8119},
   issn = {10959572},
   journal = {NeuroImage},
   keywords = {Decision making,Delay discounting,Effort discounting,FMRI,Reward,Subjective value},
   note = {Initial indifference point calibration for cog effort (reverse typing of words), delay (months), and effort/delay. Effort x delay matched by n of words they chose to type at the earliest delay compared to the same amount ($20) at different delays. So n of words could be equated to each delay. Indifference point for the costlier option level was used as subjective value in MRI GLMs. <br/><br/>Discounting indices (AUC) looked kinda linear, were similar for calibration and fMRI tasks, correlated across costs, and non-significantly lower for effort (except in 2x2 anova).<br/><br/>For delay, dmPFC and posterior parietal activity correlated with delay itself, but vmPFC and PCC correlated with SV of delay (no VS). For effort, dlPFC for net amount, and IFG for SV. <br/><br/>ventral and dorsal mPFC computed SV in general for delay, but ACC + caudate did SV of chosen effortful option.<br/><br/>Their conclusion: &quot;The subjective value of rewards discounted by cognitive effort was represented in a fronto-parietal control network comprising IFG, lateral parietal and lateral prefrontal cortex. Delay discounting recruited a network that was partially dissociable from this effort network. Furthermore, chosen value was encoded in a network that was partly unique to effort discounting (ACC), and was partly overlapping with delay discounting in the lateral OFC, and the temporal and parietal cortices.&quot;<br/><br/><br/><br/>Extra notes: they selected people that had low-enough discounting factors. Discounting indices correlated across costs. Keep in mind that n of words was matched to delay, so in a weird way this could be interpreted as participants taking into account delay time when considering effort demands. Since delay is matched, no diffs remain.},
   pages = {104-113},
   pmid = {26163803},
   title = {Separate and overlapping brain areas encode subjective value during delay and effort discounting},
   volume = {120},
   year = {2015},
}
