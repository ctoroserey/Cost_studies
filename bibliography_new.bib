   keywords = {Boredom,Cognitive effort,Ego depletion,Evoked potentials,Feedback negativity,Rewards,Self-control},
   pages = {159-168},
   publisher = {Elsevier Ltd},
   title = {Reward sensitivity following boredom and cognitive effort: A high-powered neurophysiological investigation},
   volume = {123},
