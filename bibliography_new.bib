   issue = {24},
   journal = {The Journal of Neuroscience},
   keywords = {activation makes it challenging,activation of medial frontal,cognitive control,control to pain,cortex in fmri studies,however,is associated with a,medial frontal cortex,meta-analysis,pain,significance statement,states ranging from cognitive,this high rate of,to determine how these,various processes are topolog-,wide range of psychological},
   pages = {6553-6562},
   pmid = {27307242},
   title = {Large-Scale Meta-Analysis of Human Medial Frontal Cortex Reveals Tripartite Functional Organization},
