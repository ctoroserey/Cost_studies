   issn = {19326203},
   issue = {2},
   journal = {PLoS ONE},
   pages = {1-18},
   pmid = {28192459},
   title = {Differential effects of ongoing EEG beta and theta power on memory formation},
   volume = {12},
   year = {2017},
}
@article{Guderian2009,
   abstract = {We report a human electrophysiological brain state that predicts successful memory for events before they occur. Using magnetoencephalographic recordings of brain activity during episodic memory encoding, we show that amplitudes of theta oscillations shortly preceding the onsets of words were higher for later-recalled than for later-forgotten words. Furthermore, single-trial analyses revealed that recall rate in all 24 participants tested increased as a function of increasing prestimulus theta amplitude. This positive correlation was independent of whether participants were preparing for semantic or phonemic stimulus processing, thus likely signifying a memory-related theta state rather than a preparatory task set. Source analysis located this theta state to the medial temporal lobe, a region known to be critical for encoding and recall. These findings provide insight into state-related aspects of memory formation in humans, and open a perspective for improving memory through theta-related brain states.},
   author = {S. Guderian and B. H. Schott and A. Richardson-Klavehn and E. Duzel},
   doi = {10.1073/pnas.0900289106},
   isbn = {1091-6490 (Electronic)},
   issn = {0027-8424},
   issue = {13},
   journal = {Proceedings of the National Academy of Sciences},
   note = {Here, the important part is that prestimulus MTL theta amplitude recorded with MEG was associated with better retrieval in a free recall task. They found the contiguity effect behaviorally, but this was not modulated by theta amplitude.<br/><br/>Also, their task had levels of processing (some lists were evaluated by pleasentness, the others by number of syllables), whose behavioral differences were independent from the pre-stimulus theta amplitude.<br/><br/>Curiously, post-stimulus theta amplitude decreases for successfully encoded items, which Duzel et al (2010) suggest could be due to finer tuning during learning (but maybe this doesn't apply with unrehearsed lists?)<br/><br/>Finally, these people seem to be against theta being a temporal encoding mechanism.},
