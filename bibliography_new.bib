   journal = {Trends in Cognitive Sciences},
   keywords = {Accumbens,Affect,Arousal,Human,Insula,Negative,Neuroimaging,Positive},
   pages = {422-428},
   publisher = {Elsevier Ltd},
   title = {Inferring affect from fMRI data},
