   keywords = {1917,89,evolutionary psychology,formulated in the immediate,future,i have no expectation,mental effort,mental fatigue will be,neuroeconomics,p,phenomenology,raymond dodge,self-control,that the laws of},
   pages = {661-679},
   pmid = {24304775},
   title = {An opportunity cost model of subjective effort and task performance},
