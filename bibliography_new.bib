   issn = {1522-1598},
   issue = {1},
   journal = {Journal of Neurophysiology},
   pages = {297-321},
   pmid = {19889849},
   title = {Intrinsic Functional Connectivity As a Tool For Human Connectomics: Theory, Properties, and Optimization},
