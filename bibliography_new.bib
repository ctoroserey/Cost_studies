   issn = {10538119},
   journal = {NeuroImage},
   month = {7},
   pages = {118006},
   pmid = {33819611},
   publisher = {Elsevier BV},
   title = {Functional parcellation of human and macaque striatum reveals human-specific connectivity in the dorsal caudate},
